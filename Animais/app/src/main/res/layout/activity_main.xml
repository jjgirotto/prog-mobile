<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Choose an animal"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.053"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.081" />

    <Button
        android:id="@+id/btnDog"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:textColor="#000000"
        android:background="#C8C8C8"
        android:text="CÃO"
        app:layout_constraintTop_toBottomOf="@id/textView"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="18dp"
        android:layout_marginTop="10dp" />

    <Button
        android:id="@+id/btnCat"
        android:layout_width="90dp"
        android:layout_height="40dp"
        android:text="GATO"
        android:textColor="#000000"
        android:background="#C8C8C8"
        app:layout_constraintTop_toTopOf="@id/btnDog"
        app:layout_constraintStart_toEndOf="@id/btnDog"
        android:layout_marginStart="10dp"/>

    <Button
        android:id="@+id/btnBird"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:text="PÁSSARO"
        android:textColor="#000000"
        android:background="#C8C8C8"
        app:layout_constraintTop_toTopOf="@id/btnCat"
        app:layout_constraintStart_toEndOf="@id/btnCat"
        android:layout_marginStart="10dp"/>

    <ImageView
        android:id="@+id/imgAnimal"
        android:layout_width="350dp"
        android:layout_height="350dp"
        android:contentDescription="An animal: dog, cat or bird"
        app:srcCompat="@drawable/dog"
        android:layout_marginTop="1dp"
        app:layout_constraintTop_toBottomOf="@id/btnDog"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>